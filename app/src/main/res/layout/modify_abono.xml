<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:layout_constraintCircleRadius="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar un abono"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="dfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
            />

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle del abono"
            android:textColor="#393939"
            style="@style/InputLabel"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abono nÃºmero "
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/primer_abono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" de un total de "
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/ultimo_abono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_noAbono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="1sp"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre completo"
            android:textColor="#393939"
            style="@style/InputLabel"
            />
        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marco Antonio Solis"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de pago"
            android:textColor="#393939"
            style="@style/InputLabel"
            />
        <TextView
            android:id="@+id/tv_fechaPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14/05/2020"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha cuando realiza el pago"
            android:textColor="#393939"
            style="@style/InputLabel"
            />


        <EditText
            android:id="@+id/et_fechaRealizaPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:focusable="false"
            android:padding="5dp"
            android:textAlignment="center"
            android:inputType="date"
            android:background="@drawable/et2_bg"
            android:drawableEnd="@drawable/calendar"
            android:textColor="#000000"
            android:textCursorDrawable="@null" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha del siguiente pago"
            android:textColor="#393939"
            style="@style/InputLabel"
            />


        <EditText
            android:id="@+id/et_fechaProxPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:focusable="false"
            android:padding="5dp"
            android:textAlignment="center"
            android:inputType="date"
            android:background="@drawable/et2_bg"
            android:drawableEnd="@drawable/calendar"
            android:textColor="#000000"
            android:textCursorDrawable="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora cuando realiza el pago"
            android:textColor="#393939"
            style="@style/InputLabel"
            />
        <EditText
            android:id="@+id/et_Hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:focusable="false"
            android:padding="5dp"
            android:textAlignment="center"
            android:drawableEnd="@drawable/clock"
            android:background="@drawable/et2_bg"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuevo saldo"
                    android:textColor="#393939"
                    style="@style/InputLabel"
                    />
                <TextView
                    android:id="@+id/tv_saldoActualM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$0000"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abono recibido"
                    android:textColor="#393939"
                    style="@style/InputLabel"
                    />
                <TextView
                    android:id="@+id/tv_abonoRecibidoM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$0000"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impuesto moratorio"
                    android:textColor="#393939"
                    style="@style/InputLabel"
                    />
                <TextView
                    android:id="@+id/tv_moratorioM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$000"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora cuando realiza el abono"
            android:textColor="#393939"
            style="@style/InputLabel"
            />
        <EditText
            android:id="@+id/et_Hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:focusable="false"
            android:padding="5dp"
            android:textAlignment="center"
            android:drawableEnd="@drawable/clock"
            android:background="@drawable/et2_bg"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva cantidad de abono"
            android:textColor="#393939"
            style="@style/InputLabel"
            />
        <EditText
            android:id="@+id/et_pagoRecibido"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:background="@drawable/et2_bg"
            android:drawableEnd="@drawable/dinerros"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textCursorDrawable="@null"
            />


        <TextView
            android:id="@+id/tv_moratorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Impuesto moratorio"
            android:visibility="gone"
            android:textColor="#393939"
            style="@style/InputLabel"
            />
        <EditText
            android:id="@+id/et_moratorio"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:background="@drawable/et2_bg"
            android:drawableEnd="@drawable/dinerros"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:padding="5dp"
            android:visibility="gone"
            android:focusable="false"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textCursorDrawable="@null"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de pago"
            android:textColor="#393939"
            style="@style/InputLabel"
            />
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/tipo_pago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:theme="@style/Spinner"
            android:dropDownSelector="#000000"
            android:entries="@array/pagos"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="20dp"
            />

        <CheckBox
            android:id="@+id/abono_moratorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:buttonTint="#000000"
            android:focusable="true"
            android:text="Impuesto moratorio"
            android:textColor="#000000"
            android:textSize="18dp" />


        <Button
            android:id="@+id/btn_modificacion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="#1abb9c"
            android:text="Modificar ABONO"
            android:textColor="#ffffff" />




    </LinearLayout>
</ScrollView>







